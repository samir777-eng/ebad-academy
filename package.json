{
  "name": "ebad_academy_website",
  "version": "1.0.0",
  "description": "Ebad Academy - Islamic Education Platform",
  "scripts": {
    "dev": "next dev",
    "dev:setup": "npm run db:local:setup && npm run dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "postinstall": "prisma generate && node scripts/migrate-db.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:local:setup": "prisma db push --skip-generate && node scripts/seed-local-db.js",
    "db:local:reset": "rm -f dev.db dev.db-journal && npm run db:local:setup",
    "test": "vitest",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest --watch",
    "test:unit:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:auth": "playwright test tests/auth.spec.ts",
    "test:e2e:quiz": "playwright test tests/lesson-quiz.spec.ts",
    "test:e2e:dashboard": "playwright test tests/dashboard-progress.spec.ts",
    "test:e2e:admin": "playwright test tests/admin.spec.ts",
    "test:e2e:a11y": "playwright test tests/accessibility.spec.ts",
    "test:e2e:all": "playwright test --reporter=html,json,list",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@auth/prisma-adapter": "^2.11.1",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@prisma/client": "^5.22.0",
    "@sentry/nextjs": "^10.27.0",
    "@tailwindcss/typography": "^0.5.19",
    "@tanstack/react-query": "^5.90.10",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/react-window": "^1.8.8",
    "@vercel/kv": "^3.0.0",
    "bcryptjs": "^3.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "easymde": "^2.20.0",
    "framer-motion": "^12.23.24",
    "isomorphic-dompurify": "^2.33.0",
    "lucide-react": "^0.554.0",
    "moment-hijri": "^3.0.0",
    "next": "^16.0.3",
    "next-auth": "^5.0.0-beta.30",
    "next-intl": "^4.5.5",
    "prisma": "^5.22.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-phone-number-input": "^3.4.14",
    "react-simplemde-editor": "^5.2.0",
    "react-window": "^2.2.3",
    "reactflow": "^11.11.4",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.4.0",
    "typescript": "^5.9.3",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.10.1",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.14",
    "@vitest/ui": "^4.0.14",
    "autoprefixer": "^10.4.22",
    "baseline-browser-mapping": "^2.8.32",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.3",
    "jsdom": "^27.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "vitest": "^4.0.14"
  }
}
